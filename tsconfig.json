{
  "extends": "@total-typescript/tsconfig/tsc/no-dom/library",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "noEmit": true,
    "verbatimModuleSyntax": false,

    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "target": "ESNext"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
